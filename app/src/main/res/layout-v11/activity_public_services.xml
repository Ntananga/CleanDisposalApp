<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wastemanagement.phyllis.cleandisposalapp.PublicServices"
    android:weightSum="1">


    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="426dp"
        android:id="@+id/public_calendarView"
        android:weekNumberColor="#26a65b"
        android:focusedMonthDateColor="#D2527F"
        android:focusable="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/councilText"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.27"
        android:gravity="bottom"
        android:visibility="visible"
        android:enabled="false"
        android:editable="false"
        android:text="Kakoba Division Schedule"
        android:textColor="#87D37C"
        android:textAlignment="center"
        android:textStyle="bold|normal|italic"
        android:textSize="25dp" />

</LinearLayout>
