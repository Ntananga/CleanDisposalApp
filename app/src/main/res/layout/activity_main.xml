<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="355dp"
        android:layout_height="36dp"
        android:text="Name:"
        android:id="@+id/textName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="100px"
        android:maxWidth="150px"
        android:textColor="#87D37C"
        android:textStyle="bold|normal|italic" />

    <EditText
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|textCapWords"
        android:ems="10"
        android:id="@+id/editName"
        android:layout_below="@+id/textName"
        android:textColor="#6C7A89"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxWidth="170px"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Full Name"
        android:imeOptions="actionNext"
        android:layout_weight="0.17"
        android:textStyle="bold|normal|italic" />

    <TextView
        android:layout_width="356dp"
        android:layout_height="36dp"
        android:text="E-Mail:"
        android:id="@+id/textEmail"
        android:layout_below="@+id/editName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#87D37C"
        android:maxWidth="150px"
        android:height="100px"
        android:textStyle="bold|normal|italic" />

    <EditText
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editEmail"
        android:textColor="#6C7A89"
        android:layout_below="@+id/textEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:phoneNumber="false"
        android:hint="your@yourdomain"
        android:imeOptions="actionNext"
        android:layout_weight="0.19"
        android:textStyle="bold|normal|italic" />

    <TextView
        android:layout_width="356dp"
        android:layout_height="36dp"
        android:text="Location:"
        android:id="@+id/textLocation"
        android:layout_below="@+id/editEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#87D37C"
        android:height="100px"
        android:textStyle="bold|normal|italic" />

    <EditText
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:id="@+id/editLocation"
        android:layout_below="@+id/textLocation"
        android:textColor="#6C7A89"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editEmail"
        android:layout_alignEnd="@+id/editEmail"
        android:hint="Mbarara Kayeka"
        android:imeOptions="actionNext"
        android:textStyle="bold|normal|italic" />

    <TextView
        android:layout_width="354dp"
        android:layout_height="36dp"
        android:text="Phone Number:"
        android:id="@+id/textView"
        android:layout_below="@+id/editLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#87D37C"
        android:height="100px"
        android:textStyle="bold|normal|italic" />

    <EditText
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editPhone"
        android:layout_below="@+id/textView"
        android:textColor="#6C7A89"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editLocation"
        android:layout_alignEnd="@+id/editLocation"
        android:hint="0700000000"
        android:imeOptions="actionNext"
        android:textStyle="bold|normal|italic" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept &amp; Agree To Terms &amp; Conditions"
        android:id="@+id/checkBoxTerms"
        android:layout_below="@+id/editPhone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:textColor="#87D37C"
        android:layout_alignRight="@+id/editPhone"
        android:layout_alignEnd="@+id/editPhone"
        android:imeOptions="actionDone"
        android:layout_weight="0.24"
        android:textStyle="bold|normal|italic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit_button"
        android:textColor="#87D37C"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|normal|italic" />

</LinearLayout>
