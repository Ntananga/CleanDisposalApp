<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wastemanagement.phyllis.cleandisposalapp.PrivateServices">

    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="307dp"
        android:id="@+id/private_calendarView"
        android:weekNumberColor="#26a65b"
        android:focusedMonthDateColor="#D2527F"
        android:focusable="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contactText"
        android:gravity="fill_horizontal"
        android:elegantTextHeight="false"
        android:text="Contact Info:"
        android:textColor="#87D37C"
        android:textSize="20dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/companyPhone"
            android:gravity="fill_horizontal"
            android:elegantTextHeight="false"
            android:text="0704605268"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/companyService"
        android:gravity="fill_horizontal"
        android:elegantTextHeight="false"
        android:text="Services"
        />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/servicetext"/>

         
</LinearLayout>
